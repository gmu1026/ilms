<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.ac.sunmoon.clms.lab.LabMapper">
	<select id="selectAll" parameterType="kr.ac.sunmoon.clms.lab.Lab" resultType="kr.ac.sunmoon.clms.lab.Lab">
		 SELECT
		 	  NO
		 	 ,MANAGEMENT_DEPT_NAME
		 	 ,USE_DEPT_NAME
		 	 ,USAGE
		 	 ,EQUIPMENT_COUNT
		 FROM
		      LAB
		 <where>
		 	<if test="no > 0">
		 		NO = #{no}
		 	</if>
		 </where>
	</select>
	<select id="select" resultType="kr.ac.sunmoon.clms.lab.Lab" parameterType="int">
		SELECT
		     NO
		    ,MANAGEMENT_DEPT_NAME
		 	,USE_DEPT_NAME
		 	,USAGE
		 	,EQUIPMENT_COUNT
		FROM
		     LAB
		WHERE
		     NO=#{no}
	</select>
	<select id="check" resultType="int" parameterType="int">
		SELECT
		     COUNT(*)
		FROM
		     LAB
		WHERE
		     NO=#{no}
	</select>
	<insert id="insert" parameterType="kr.ac.sunmoon.clms.lab.Lab">
 		INSERT INTO LAB
 		VALUES(
 			#{no}
 		   ,#{managementDeptName}
 		   ,#{useDeptName}
 		   ,#{usage}
 		   ,#{equipmentCount})
	</insert>
	<update id="update" parameterType="kr.ac.sunmoon.clms.lab.Lab">
		UPDATE
		     LAB
		SET
		    MANAGEMENT_DEPT_NAME=#{managementDeptName}
		    ,USE_DEPT_NAME=#{useDeptName}
		    ,USAGE=#{usage}
		    ,EQUIPMENT_COUNT=#{equipmentCount}
		WHERE
		     NO=#{no}
	</update>
	<delete id="delete" parameterType="int">
		DELETE FROM
		     LAB
		WHERE
		     NO=#{no}
	</delete>
</mapper>

